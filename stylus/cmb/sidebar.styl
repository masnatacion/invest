.sidebar
  background #303030
  padding 0
  .nav-sidebar
    padding: 0;
    border-top: 15em solid #313131;
    background #393939
  li
    a
      color #7e7e7e
      

.sub-header
  padding-bottom 10px
  border-bottom 1px solid #eee

.navbar-fixed-top
  border 0

@media (min-width: 768px) {
  .sidebar {
    background: #393939;
    position: fixed;
    top:0;
    bottom: 0;
    left: 0;
    z-index: 1;
    display: block;
    padding: 20px;
    overflow-x: hidden;
    overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
    border-right: 1px solid #eee;
  }
}
.nav-sidebar
  margin-bottom 20px
  margin-left -20px
  margin-right -20px
.main
  .page-header
    margin-top 0

.nav-sidebar
  & > li
    & > a
      padding-right 20px
      padding-left 20px

.nav-sidebar > .active > a,
.nav-sidebar > .active > a:hover,
.nav-sidebar > .active > a:focus
  color #fff
  background-color #428bca

.main
  padding 20px
  top 10em

